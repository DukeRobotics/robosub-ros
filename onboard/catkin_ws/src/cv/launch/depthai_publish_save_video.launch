<launch>
	<arg name="rgb_video" default="True" doc='{"type":"bool","help":"Whether the RGB video (16:9, 1080p) should be published."}' />
	<arg name="rgb_video_file_path" default="" doc='{"type":"str","help":"File path and name to save RGB video to. Relative to onboard cv folder. If empty, will not save video."}' />
	<arg name="rgb_preview" default="True" doc='{"type":"bool","help":"Whether the RGB preview (square, 416x416) should be published."}' />
	<arg name="rgb_preview_file_path" default="" />
	<arg name="left" default="True" doc='{"type":"bool","help":"Whether the left mono video should be published."}' />
	<arg name="left_file_path" default="" />
	<arg name="right" default="True" doc='{"type":"bool","help":"Whether the right mono video should be published."}' />
	<arg name="right_file_path" default="" />
	<arg name="disparity" default="True" doc='{"type":"bool","help":"Whether the disparity map should be published."}' />
	<arg name="disparity_file_path" default="" />
	<arg name="depth" default="True" doc='{"type":"bool","help":"Whether the depth map should be published."}' />
	<arg name="depth_file_path" default="" />
	<node name="depthai_publish_save_video" pkg="cv" type="depthai_publish_save_video.py" output="screen">
		<param name="rgb_video" value="$(arg rgb_video)" />
		<param name="rgb_video_file_path" value="$(arg rgb_video_file_path)" />
		<param name="rgb_preview" value="$(arg rgb_preview)" />
		<param name="rgb_preview_file_path" value="$(arg rgb_preview_file_path)" />
		<param name="left" value="$(arg left)" />
		<param name="left_file_path" value="$(arg left_file_path)" />
		<param name="right" value="$(arg right)" />
		<param name="right_file_path" value="$(arg right_file_path)" />
		<param name="disparity" value="$(arg disparity)" />
		<param name="disparity_file_path" value="$(arg disparity_file_path)" />
		<param name="depth" value="$(arg depth)" />
		<param name="depth_file_path" value="$(arg depth_file_path)" />
	</node>
</launch>
