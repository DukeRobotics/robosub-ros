{
  "root": true,
  "env": {
    "browser": true,
    "es2020": true,
    "node": false
  },
  "ignorePatterns": ["dist"],
  "plugins": ["jest"],
  "extends": ["plugin:@foxglove/base", "plugin:@foxglove/react"],
  "rules": {
    "camelcase": [
      "warn",
      {
        "properties": "always"
      }
    ],
    "react-hooks/exhaustive-deps": ["error"],
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "spaced-comment": [
      "error",
      "always",
      {
        "line": {
          "markers": ["/"],
          "exceptions": ["-", "+"]
        },
        "block": {
          "markers": ["!"],
          "exceptions": ["*"],
          "balanced": true
        }
      }
    ],
    "capitalized-comments": [
      "warn",
      "always"
    ]
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@foxglove/typescript"],
      "parserOptions": {
        "project": "**/tsconfig.json"
      }
    }
  ]
}
